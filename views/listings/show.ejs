<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3>Listing detail : </h3>
        </div>
        <div class="card col-6 offset-3">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="...">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= listing.title %>
                    </b> <br>
                    <%= listing.description %> <br>
                        &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                            <%= listing.location %> <br>
                                <%= listing.country %>
                </p>
            </div>
        </div>
    </div>

    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3">Edit</a>

    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark add-btn offset-4">Delete</button>
    </form>
</div>
<br><br>